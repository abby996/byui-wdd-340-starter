<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container">
        <h1>Register</h1>

        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined' && Object.keys(messages).length > 0) { %>
            <div class="flash-messages">
                <% Object.keys(messages).forEach(function(type) { %>
                    <% messages[type].forEach(function(message) { %>
                        <div class="flash-message <%= type %>">
                            <%= message %>
                        </div>
                    <% }) %>
                <% }) %>
            </div>
        <% } %>

        <!-- Validation Errors -->
        <% if (errors && errors.length > 0) { %>
            <div class="errors">
                <ul>
                    <% errors.forEach(function(error) { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <!-- SINGLE REGISTRATION FORM -->
        <div id="form_container" class="form_holder">
            <h2 class="reg">Register</h2>
            <p id="req">All fields are required</p>

            <form id="register_form" action="/account/register" method="post">
                <div class="form-group">
                    <label for="account_firstname" class="form-label">First Name:</label>
                    <input type="text" id="account_firstname" class="form-input" name="account_firstname" 
                           required value="<%= typeof account_firstname !== 'undefined' ? account_firstname : '' %>">
                </div>

                <div class="form-group">
                    <label for="account_lastname" class="form-label">Last Name:</label>
                    <input type="text" id="account_lastname" class="form-input" name="account_lastname" 
                           required value="<%= typeof account_lastname !== 'undefined' ? account_lastname : '' %>">
                </div>

                <div class="form-group">
                    <label for="account_email" class="form-label">Email:</label>
                    <input type="email" id="account_email" class="form-input" name="account_email" 
                           required value="<%= typeof account_email !== 'undefined' ? account_email : '' %>">
                </div>

                <div class="form-group">
                    <label for="account_password" class="form-label">Password:</label>
                    <input type="password" id="account_password" class="form-input" name="account_password" 
                           required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                    
                    <p class="pattern">
                        Password must be a minimum of 12 characters in length, at least 1 capital letter,
                        at least 1 number, and at least 1 special character.
                    </p>
                </div>

                <button type="submit" id="register" class="btn btn-primary">Register</button>
            </form>
        </div>

        <p>Already have an account? <a href="/account/login">Login here</a></p>
    </main>
    
    <%- include('../partials/footer') %>
</body>
</html>