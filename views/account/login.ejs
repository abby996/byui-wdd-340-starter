<!-- Inserting the main content headings  -->
<!-- And making the title value as our h1 value with an if statement. -->
<% if (title) { %>
<h1 class="page_head"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>


<%- messages() %>

<!-- This is to display a validation failed messages -->
 <% if (errors) { %>
  <ul class="notice failed">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>


<div id="form_container" class="form_holder">
    <form id="login_form" action="/account/login" method="post">
        <label for="email" class="form label">Email:</label>
        <input type="email" id="email" class="form input" name="account_email" required value="<%= locals.account_email %>">

        <label for="password" class="form label">Password:</label>
        <input type="password" id="password" class="form input" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        
        <p class="pattern">Password must be a minimum of 12 character in lenght, at least 1 capital letter,
            at least 1 number, and at least 1 special character.
        </p>


        <input type="submit" id="submit" class="form_done" name="submit_button" value="Login">
    </form>

    <p id="sign_up">No account? <a href="/account/register" id="registeration">Sign-up</a></p>
</div>


     <script src="../../js/script.js"></script>