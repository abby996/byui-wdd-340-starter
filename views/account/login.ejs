<!-- Inserting the main content headings  -->
<!-- And making the title value as our h1 value with an if statement. -->
<% if (title) { %>
<h1 class="page_head"><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- FIX: REPLACE THIS LINE -->
<% if (typeof messages !== 'undefined' && Object.keys(messages).length > 0) { %>
    <div class="flash-messages">
        <% Object.keys(messages).forEach(function(type) { %>
            <% messages[type].forEach(function(message) { %>
                <div class="flash-message <%= type %>">
                    <%= message %>
                </div>
            <% }) %>
        <% }) %>
    </div>
<% } %>

<!-- This is to display validation failed messages -->
<% if (errors) { %>
    <ul class="notice failed">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<div id="form_container" class="form_holder">
    <form id="login_form" action="/account/login" method="post">
        <label for="email" class="form label">Email:</label>
        <input type="email" id="email" class="form input" name="account_email" required value="<%= typeof account_email !== 'undefined' ? account_email : '' %>">

        <label for="password" class="form label">Password:</label>
        <input type="password" id="password" class="form input" name="account_password" required>
        
        <p class="pattern">Password must be a minimum of 12 characters in length, at least 1 capital letter,
            at least 1 number, and at least 1 special character.
        </p>

        <input type="submit" id="submit" class="form_done" name="submit_button" value="Login">
    </form>

    <p id="sign_up">No account? <a href="/account/register" id="registeration">Sign-up</a></p>
</div>

<script src="/js/script.js"></script>